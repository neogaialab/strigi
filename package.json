{
  "name": "strigi",
  "type": "module",
  "version": "0.3.0",
  "description": "CLI command assistant leveraging GenAI to generate and explain commands using natural language.",
  "author": "Luis Emidio",
  "license": "MIT",
  "homepage": "https://neogaialab.github.io/strigi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neogaialab/strigi.git"
  },
  "bugs": {
    "url": "https://github.com/neogaialab/strigi/issues"
  },
  "keywords": [
    "cli",
    "ai",
    "prompt",
    "terminal",
    "shell",
    "command",
    "generation",
    "llm",
    "gemini"
  ],
  "module": "src/main.ts",
  "bin": {
    "s": "./dist/s"
  },
  "files": [
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "dist"
  ],
  "scripts": {
    "start": "bun .",
    "dev": "bun --watch .",
    "build": "bun build ./src/main.ts --outfile dist/s --compile --minify --sourcemap",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "release-it",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "gh-pages -d ./docs/.vitepress/dist",
    "docs:licenses": "bun ./docs/.vitepress/licenses.ts"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.3.1",
    "@inquirer/prompts": "^4.3.1",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "clipanion": "^4.0.0-rc.3",
    "clipboardy": "^4.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.12.1",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "release-it": "^17.1.1",
    "vitepress": "^1.1.0"
  }
}
